<%= simple_form_for [@daron] do |f| %>
  <%= f.input :name %>
  <%= f.input :profile_picture %>
  <%= f.input :price %>
  <%= f.input :bio %>
  <%= f.submit "Modify your Daron Profile", class: "btn btn-primary" %>
<% end %>

<%= link_to "Delete your Daron Profil",
  daron_path(@daron.id),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
